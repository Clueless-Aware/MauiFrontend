<style>
    .modal {
        display: block;
        position:center;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8);
    }

        .modal img {
            display: block;
            margin: auto;
            max-width: 80%;
            max-height: 80%;
            overflow: auto;
        }

        .modal .caption {
            color: #fff;
            font-size: 20px;
            text-align: center;
            margin-top: 10px;
        }
</style>

<div class="w3-card-4 w3-animate-right w3-round-large w3-white w3-margin-bottom w3-padding-top-24">
    <p class="w3-xxlarge">
        @artwork.Title
        <button class="w3-round-large w3-center button-padding w3-text-black w3-hover-text-red w3-button">
            <span class="material-symbols-outlined">
                bookmark
            </span>
        </button>

    </p>

    <div class="w3-row">
        <div class="w3-col m6 w3-center w3-padding-large">
            <p><b><i class="fa fa-user w3-margin-right"></i>Photo</b></p><br>
            <img src="@artwork.ImageUrl" alt="@artwork.Title" @onclick='() => OnClick(artwork.ImageUrl, artwork.Title)' />

            @if (ModalVisible)
            {
                <div class="modal">
                    <img src="@ImageSource" alt="@CaptionText" />
                    <div class="caption">@CaptionText</div>
                    <button @onclick="Close">x</button>
                </div>
            }
        </div>

        <div class="w3-col m6 w3-padding-large w3-left-align">
            @if (artwork.Description.Length > 0)
            {
                <p>
                    @artwork.Description
                </p>
            }
            else
            {
                <p>
                    Nothing to see
                </p>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Models.Artwork.BaseArtwork artwork { get; set; }

    private string ImageSource { get; set; }
    private string CaptionText { get; set; }
    private bool ModalVisible { get; set; }


    private void OnClick(string source, string alt)
    {
        ImageSource = source;
        CaptionText = alt;
        ModalVisible = true;
    }

    private void Close()
    {
        ModalVisible = false;
    }

}