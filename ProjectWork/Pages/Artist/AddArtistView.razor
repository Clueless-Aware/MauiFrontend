@page "/add-artist"
@inject DashboardAdminArtistVM DirectorArtistAdmin
@using ProjectWork.ViewModels.Artist
@using ProjectWork.Models.Artist
@using System.ComponentModel
@implements IDisposable
@layout AdminLayout


<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<h3>Add Artist</h3>
<hr/>
<EditForm Model="@artist" OnValidSubmit="async () => await DirectorArtistAdmin.AddItemAsync(artist)">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="table-responsive">

        <table>
            <tr>
                <th>Field</th>
                <th>Data</th>
                <th>Format</th>
            </tr>
            <!---------------------------------------------------->
            <tr>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Name
                    </p>
                </td>
                <td>
                    <input class="w3-round w-50" type="text"
                           @bind-value="artist.Name"
                           placeholder="Enter Name">
                </td>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Surname,Firstname
                    </p>
                </td>
            </tr>
            <!---------------------------------------------------->
            <tr>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Birth Data
                    </p>
                </td>
                <td>
                    <input class="w3-round w-50" type="text"
                           @bind-value="artist.BirthData"
                           placeholder="Enter Birth Data">
                </td>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Born YEAR, WHERE, Died YEAR, WHERE
                    </p>
                </td>
            </tr>
            <!---------------------------------------------------->
            <tr>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Profession
                    </p>
                </td>
                <td>
                    <input class="w3-round w-50" type="text"
                           @bind-value="artist.Profession"
                           placeholder="Enter Profession">
                </td>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Profession of artist
                    </p>
                </td>
            </tr>
            <!---------------------------------------------------->
            <tr>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        School
                    </p>
                </td>
                <td>
                    <input class="w3-round w-50" type="text"
                           @bind-value="artist.School"
                           placeholder="Enter School">
                </td>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        School of artist
                    </p>
                </td>
            </tr>
            <!---------------------------------------------------->
            <tr>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Biography
                    </p>
                </td>
                <td>
                    <input class="w3-round w-50" type="text"
                           @bind-value="artist.Biography"
                           placeholder="Enter Biography">
                </td>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Biography of artist
                    </p>
                </td>
            </tr>
            <!---------------------------------------------------->
            <tr>
                <td>
                    <p class="w3-w3-bold">
                        Artist image
                    </p>
                </td>
                <td>
                    <InputFile class="w3-button w3-round" OnChange="e => artist.File = e.File"/>
                </td>
                <td class="w3-padding-16">
                    <p class="w3-w3-bold">
                        Artist image
                    </p>
                </td>
            </tr>
        </table>
    </div>


    @*TODO: disable if DirectorArtistAdmin.IsBusy*@
    <button type="submit" class="general-button">Add</button>
</EditForm>


@code {
    readonly BaseArtist artist = new();

    protected override async Task OnInitializedAsync()
    {
        DirectorArtistAdmin.PropertyChanged += async (sender, e) => { await InvokeAsync(StateHasChanged); };
    //TODO: CLEAR PARAMETERS
        await base.OnInitializedAsync();
    }

    async void OnPropertyChangedHandler(object sender, PropertyChangedEventArgs e)
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        DirectorArtistAdmin.PropertyChanged -= OnPropertyChangedHandler;
    }

}